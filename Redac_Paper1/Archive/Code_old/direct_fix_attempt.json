    \"# CSV Data Storage and Figure Saving Functions\\n",
    \"# These functions save simulation results to CSV files and figures to the figures/ folder\\n",
    \"\\n",
    \"import numpy as np\\n",
    \"import pandas as pd\\n",
    \"import os\\n",
    \"from datetime import datetime\\n",
    \"import matplotlib.pyplot as plt\\n",
    \"\\n",
    \"def save_simulation_data_to_csv(time_points, populations, coherences, qfi_values, etr_values, filename_prefix=\"simulation\"):\\n",

    \"\\n",
    "    Save quantum dynamics simulation data to CSV files.\\n",

    "    \\n",
    "    Parameters:\\n",
    "    time_points: array of time points\\n",
    "    populations: 2D array of site populations over time\\n",
    "    coherences: array of coherence values over time\\n",
    "    qfi_values: array of Quantum Fisher Information values over time\\n",
    "    etr_values: array of ETR values over time\\n",
    "    filename_prefix: prefix for output files\\n",
    \"\\n",
    "    # Create directory if it doesn't exist\\n",
    "    os.makedirs(\"figures\", exist_ok=True)\\n",
    "    \\n",
    "    # Create a comprehensive DataFrame for all data\\n",
    "    data = {\\n",
    "        'time_fs': time_points\\n",
    "    }\\n",
    "    \\n",
    "    # Add populations for each site\\n",
  "    n_sites = populations.shape[1]\\n",
  "    for i in range(n_sites):\\n",
  "        data[f'population_site_{i+1}'] = populations[:, i]\\n",
  "    \\n",
  "    # Add other metrics\\n",
  "    data['coherence_l1_norm'] = coherences\\n",
  "    data['qfi'] = qfi_values\\n",
  "    data['etr'] = etr_values\\n",
  "    \\n",
  "    df = pd.DataFrame(data)\\n",
  "    df.to_csv(f\"figures/{filename_prefix}_dynamics.csv\", index=False)\\n",
  "    \\n",
  "    print(f\"Saved simulation dynamics to figures/{filename_prefix}_dynamics.csv\")\\n",
  "    \\n",
  "    # Also save summary statistics\\n",
  "    summary_data = {\\n",
  "        'metric': ['final_population_site_1', 'final_population_site_2', 'final_population_site_3', \\n",
  "                   'final_coherence', 'final_qfi', 'average_etr', 'max_qfi', 'min_qfi'],\\n",
  "        'value': [populations[-1, 0] if n_sites > 0 else 0, \\n",
  "                  populations[-1, 1] if n_sites > 1 else 0, \\n",
  "                  populations[-1, 2] if n_sites > 2 else 0,\\n",
  "                  coherences[-1] if len(coherences) > 0 else 0,\\n",
  "                  qfi_values[-1] if len(qfi_values) > 0 else 0,\\n",
  "                  np.mean(etr_values) if len(etr_values) > 0 else 0,\\n",
  "                  np.max(qfi_values) if len(qfi_values) > 0 else 0,\\n",
  "                  np.min(qfi_values) if len(qfi_values) > 0 else 0]\\n",
  "    }\\n",
  "    \\n",
  "    summary_df = pd.DataFrame(summary_data)\\n",
  "    summary_df.to_csv(f\"figures/{filename_prefix}_summary.csv\", index=False)\\n",
  "    \\n",
  "    print(f\"Saved simulation summary to figures/{filename_prefix}_summary.csv\")\\n",
  "    \\n",
  "    return df, summary_df\\n",
